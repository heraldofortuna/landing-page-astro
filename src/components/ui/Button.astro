---
import type { ButtonProps } from "../../types/components";

const { text, size = 'medium', variant = 'primary', onClick } = Astro.props as ButtonProps;

let buttonClasses = 'w-fit font-medium rounded-4xl transition-colors duration-200 cursor-pointer border';

switch (size) {
  case 'small':
    buttonClasses += ' h-12 md:h-13 text-sm md:text-base leading-5 px-5 md:px-6';
    break;
  case 'medium':
    buttonClasses += ' h-14 md:h-16 text-base md:text-lg px-10 md:px-12';
    break;
  case 'large':
    buttonClasses += ' h-14 md:h-16 text-lg md:text-xl px-12 md:px-14';
    break;
  default:
    buttonClasses += ' h-12 md:h-13 text-sm md:text-base leading-5 px-5 md:px-6';
}

switch (variant) {
  case 'primary':
    buttonClasses += ' bg-primary text-white border-primary hover:bg-white hover:border-primary hover:text-primary';
    break;
  case 'secondary':
    buttonClasses += ' bg-white text-black border-primary hover:bg-primary hover:border-white hover:text-white';
    break;
  default:
    buttonClasses += ' bg-primary text-white hover:bg-white hover:border-primary hover:text-primary';
}
---

<button class={buttonClasses} onclick={onClick}>
  <span class="w-full whitespace-nowrap">{text}</span>
</button>
