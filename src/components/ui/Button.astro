---
import type { ButtonProps } from "../../types/components";

const { text, size = 'medium', variant = 'primary', onClick } = Astro.props as ButtonProps;

let buttonClasses = 'w-fit font-medium rounded-4xl transition-colors duration-200 cursor-pointer border border-transparent';

switch (size) {
  case 'small':
    buttonClasses += ' h-13 text-base leading-5 px-6';
    break;
  case 'medium':
    buttonClasses += ' h-16 text-lg px-12';
    break;
  case 'large':
    buttonClasses += ' h-16 text-xl px-14';
    break;
  default:
    buttonClasses += ' h-13 text-base px-6';
}

switch (variant) {
  case 'primary':
    buttonClasses += ' bg-primary text-white hover:bg-white hover:border-primary hover:text-primary';
    break;
  case 'secondary':
    buttonClasses += ' bg-white text-black hover:bg-primary hover:border-white hover:text-white';
    break;
  default:
    buttonClasses += ' bg-primary text-white hover:bg-white hover:border-primary hover:text-primary';
}
---

<button class={buttonClasses} onclick={onClick}>
  {text}
</button>
