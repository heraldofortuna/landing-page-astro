---
import { Image } from 'astro:assets';
import AdobeIcon from '/src/assets/adobe.svg';
import AmazonIcon from '/src/assets/amazon.svg';
import AsanaIcon from '/src/assets/asana.svg';
import EvernoteIcon from '/src/assets/evernote.svg';
import GoogleIcon from '/src/assets/google.svg';
import MicrosoftIcon from '/src/assets/microsoft.svg';
