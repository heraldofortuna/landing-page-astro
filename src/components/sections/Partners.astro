    <ul class="w-full grid grid-cols-5 justify-between gap-x-6 gap-y-24">
      <li class="flex items-center justify-center">
        <Image src={SpotifyIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={GoogleIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={UberIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={MicrosoftIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={ShopifyIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={EvernoteIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={AdobeIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={PaypalIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
        <Image src={AmazonIcon} alt="Trabajamos con Spotify." />
      </li>
      <li class="flex items-center justify-center">
