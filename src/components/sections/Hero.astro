---
import { Image } from 'astro:assets';
import HeroImage from '/src/assets/hero.png';
import Inputfield from '../ui/Inputfield.astro';
import Button from '../ui/Button.astro';
---

<section class="py-16 lg:py-20">
  <div class="w-[90%] max-w-[1200px] flex flex-col lg:flex-row items-center justify-between gap-14 m-auto">
    <div class="w-full lg:w-1/2 flex flex-col gap-11">
      <div class="flex flex-col gap-7">
        <h1 class="text-6xl lg:text-8xl text-center lg:text-left font-semibold">We Take Care Of Your Brand</h1>
        <p class="text-lg lg:text-xl text-gray-dark text-center lg:text-left">We care about our work and we care about our clients.</p>
      </div>
      <div class="flex items-center justify-between lg:justify-baseline gap-3">
        <div class="w-full">
          <Inputfield type="email" name="email" placeholder="Enter your Email" />
        </div>
        <Button text="Lets Talk" />
      </div>
    </div>
    <div class="w-full lg:w-1/2">
      <Image src={HeroImage} alt="We Take Care of Your Brand." />
    </div>
  </div>
</section>