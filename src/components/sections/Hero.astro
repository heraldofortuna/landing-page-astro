---
import { Image } from 'astro:assets';
import HeroImage from '/src/assets/hero.png';
import Inputfield from '../ui/Inputfield.astro';
import Button from '../ui/Button.astro';
---

<section class="py-21">
  <div class="w-[90%] max-w-5xl flex items-center justify-between gap-14 m-auto">
    <div class="w-1/2 flex flex-col gap-11">
      <div class="flex flex-col gap-7">
        <h1 class="text-8xl font-semibold">We Take Care Of Your Brand</h1>
        <p class="text-xl opacity-60">We care about our work and we care about our clients.</p>
      </div>
      <div class="flex items-center gap-3">
        <Inputfield type="email" name="email" placeholder="Enter your Email" />
        <Button text="Lets Talk" />
      </div>
    </div>
    <div class="w-1/2">
      <Image src={HeroImage} alt="We Take Care of Your Brand." />
    </div>
  </div>
</section>