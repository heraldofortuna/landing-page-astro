---
import { Image } from 'astro:assets';
import RightArrowBlueIcon from '/src/assets/right-arrow-blue.svg';
---

<section class="py-32">
  <div class="w-[90%] max-w-5xl flex justify-between gap-24 m-auto">
    <div class="w-1/2 grid grid-cols-2 gap-x-6 gap-y-10 justify-between">
      <div class="flex flex-col">
        <span class="text-6xl font-semibold leading-20">245%</span>
        <p class="opacity-60">More revenues for the brand</p>
      </div>
      <div class="flex flex-col">
        <span class="text-6xl font-semibold leading-20">130K+</span>
        <p class="opacity-60">Audiences reached</p>
      </div>
      <div class="flex flex-col">
        <span class="text-6xl font-semibold leading-20">50+</span>
        <p class="opacity-60">brands trust us</p>
      </div>
      <div class="flex flex-col">
        <span class="text-6xl font-semibold leading-20">24+</span>
        <p class="opacity-60">Worldwide awards</p>
      </div>
    </div>
    <div class="w-1/2 flex flex-col gap-16">
      <div class="flex flex-col gap-5">
        <h2 class="text-6xl leading-20">Commitments</h2>
        <p class="text-lg opacity-60">We are committed to working with you collaboratively to understand your goals and create a strategy that will achieve them.</p>
      </div>
      <div class="text-primary flex items-center gap-2">
        <p class="text-lg font-semibold leading-6">Learn More</p>
        <span class="flex items-center justify-center">
          <Image src={RightArrowBlueIcon} alt="Learn More." />
        </span>
      </div>
    </div>
  </div>
</section>